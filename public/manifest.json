{
  "manifest_version": 3,
  "name": "Font Finder",
  "version": "1.0",
  "description": "A Chrome extension to find font details on hover.",
  "permissions": [
      "activeTab",
      "scripting"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ]
}